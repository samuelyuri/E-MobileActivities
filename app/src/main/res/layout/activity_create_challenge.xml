<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.samuelzvir.meuabc.activities.CreateTextActivity">

    <Button
        android:id="@+id/send"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:drawableTop="@drawable/ic_add_circle_black_48dp"
        android:layout_alignParentLeft="true"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:onClick="onSendMessage"
        android:text="@string/send" />

    <EditText
        android:id="@+id/message"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:ems="10"
        android:layout_weight="2"
        android:background="#1887C7"
        android:layout_alignBottom="@+id/abc"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Imagem"
        android:id="@+id/abc"
        android:onClick="onToCamera"
        android:drawableTop="@drawable/ic_camera_alt_black_48dp"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/send"
        android:layout_toEndOf="@+id/send"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="horizontal">


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_vertical"
        android:src="@drawable/dog"
        android:layout_marginTop="124dp"
        android:layout_below="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />
</RelativeLayout>
