<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="br.com.ema.activities.operations.TakePhotoActivity"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0.10"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Photo"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="0.95"
            tools:ignore="NestedWeights" />
        <ImageButton
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:onClick="rotate"
            android:background="@null"
            android:src="@drawable/ic_rotate_right_black_24dp"
            android:contentDescription="@string/rotate" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.60">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="384dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            android:cropToPadding="true"
            android:src="@drawable/ic_photo_camera_black_48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newPhoto"
            android:onClick="launchCamera"
            android:theme="@style/PhotoButton" />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toChallenge"
            android:text="@string/ok"
            android:theme="@style/BlueButton" />
        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toChallenge"
            android:text="@string/cancel"
            android:theme="@style/CancelButton" />
    </LinearLayout>

</LinearLayout>
