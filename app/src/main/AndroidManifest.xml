<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.samuelzvir.meuabc" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.CreateTextActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_create_text"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MenuActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.TakePhotoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_take_photo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.BuildChallengesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_build_challenges"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PlayChallengesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_play_challenges"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ScrabbleActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_scrabble"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ABCActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_abc"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ProfilesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_profiles"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.DataAnalysisActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_data_analysis"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.UserActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_user"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.InitialLoadingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AdminFormActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".activities.LoginActivity" >
        </activity>
        <activity
            android:name=".activities.StudentMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".activities.StudentGameActivity" >
        </activity>
        <activity
            android:name=".activities.StatsActivity"
            android:label="@string/title_activity_stats"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
